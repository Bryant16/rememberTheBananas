doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet' href="https://use.fontawesome.com/releases/v5.0.12/css/all.css")
        link(rel='stylesheet' href='/stylesheets/app.css')
        link(rel='stylesheet' href='/stylesheets/listModal.css')
        title Remember the Bananas
    body
        head
            div.masthead
                div.burger
                    i(id="bars" class="fas fa-bars" href="#")
                div.searchbar
                    //- form(method="post" action="/app/search" class="formSearch")
                    form.search
                    button(id="search" class="fas fa-search" href="#" type="submit")
                    input(id="textBar" class="fas fa-search" type="text" class="inputBar" placeholder="Search for a task")
                    //i(id="search" class="fas fa-search" href="#")
                div.hello
                    a Welcome to Remember the Bananas #{user.username}!
                    button.logoutbutton() logout
                div.logout
                    <i class="fas fa-cloud"></i>
                    <i class="far fa-bell"></i>
                    <i class="fas fa-cogs"></i>
        main
            div(class="container")
                div.main(id="sidebar")
                    ul.lists
                        img(class="imagesidebar" src="/images/newLogo2.png")
                        form.formList
                        button.add(type="submit") add list
                        div#myModal.modal
                            div.modal-content
                                span.close &times
                                p Add Your List..
                                form(method="post" action="/app/lists")
                                    input(class="textBar" type="text" name="list")
                                    button.confirmAdd(type="submit") Add New List
                            div
                        div
                            table
                                thead 
                                    td lists
                                tbody
                                    each list in allLists
                                        tr
                                            td
                                                a(href=`/app/${list.id}`)= list.name
                div.main(id='taskfield')
                    form.form
                        input(type="hidden" value=list.id name="listId")
                        input(class="inputBar" type="text" name="task")
                        div
                        button.submit(type='submit') add task
                        div
                            button.delete(type="submit") Delete
                        div.tasks
                            if allTasks
                                table
                                    thead
                                        td: <input class="checkbox" type="checkbox"/>
                                    tbody
                                        each task in allTasks.Tasks
                                            tr(class="taskLi")=task.name
                div.main(id="random")
                    ul.current-list
                        if list
                            li= list.name
                    .task-info
                        div
                            h3 Number of Tasks
                                div#task-number

        script(src="/javascripts/index.js" type="module")
        script(src="/javascripts/list.js" type="module")
